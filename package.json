{
  "name": "eventask-api",
  "private": true,
  "version": "1.0.0",
  "description": "RESTful API with real-time WebSocket notifications and event-driven architecture",
  "author": "Agustin Moya",
  "license": "SEE LICENSE IN LICENSE",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec tsx src/app.ts",
    "build": "node --max-old-space-size=512 ./node_modules/typescript/lib/tsc.js",
    "build:prod": "rimraf -rf dist && tsc",
    "prestart": "npm run build",
    "start": "node dist/app.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Info: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.ts": [
      "bash -c 'pnpm run typecheck'"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "keywords": [],
  "dependencies": {
    "bcryptjs": "3.0.2",
    "connect-mongo": "5.1.0",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dayjs": "1.11.13",
    "dotenv": "16.5.0",
    "express": "5.2.1",
    "express-rate-limit": "8.1.0",
    "express-session": "1.18.2",
    "express-validator": "7.3.1",
    "google-auth-library": "10.3.1",
    "jsonwebtoken": "9.0.2",
    "lusca": "1.7.0",
    "mongoose": "8.18.1",
    "mongoose-lean-id": "1.1.0",
    "mongoose-lean-virtuals": "2.1.0",
    "morgan": "1.10.1",
    "multer": "2.0.2",
    "node-cron": "4.2.1",
    "nodemailer": "7.0.11",
    "socket.io": "4.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@eslint/js": "9.39.2",
    "@types/cookie-parser": "1.4.8",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/express-session": "1.18.2",
    "@types/jsonwebtoken": "9.0.9",
    "@types/lusca": "1.7.5",
    "@types/mongoose-lean-id": "1.0.0",
    "@types/morgan": "1.9.10",
    "@types/multer": "2.0.0",
    "@types/node": "22.15.17",
    "@types/nodemailer": "7.0.4",
    "@typescript-eslint/eslint-plugin": "8.32.0",
    "@typescript-eslint/parser": "8.43.0",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "nodemon": "3.1.11",
    "prettier": "3.7.4",
    "rimraf": "6.0.1",
    "tsx": "4.19.4",
    "typescript": "5.8.3"
  }
}